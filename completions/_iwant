#compdef iwant

autoload -U is-at-least

_iwant() {
    typeset -A opt_args
    typeset -a _arguments_options
    local ret=1

    if is-at-least 5.2; then
        _arguments_options=(-s -S -C)
    else
        _arguments_options=(-s -C)
    fi

    local context curcontext="$curcontext" state line
    _arguments "${_arguments_options[@]}" \
'*-C+[The specified categories \[default: all\]]:CATEGORIES: ' \
'*--categories=[The specified categories \[default: all\]]:CATEGORIES: ' \
'*-E+[The excluded categories]:EXCLUDE: ' \
'*--exclude=[The excluded categories]:EXCLUDE: ' \
'*-m+[Enable extra managers]:MANAGERS:(paru flatpak npm cargo)' \
'*--extra-managers=[Enable extra managers]:MANAGERS:(paru flatpak npm cargo)' \
'(-p --preview)-s[Don'\''t display manifest]' \
'(-p --preview)--silent[Don'\''t display manifest]' \
'(-s --silent)-p[View the manifest without downloading]' \
'(-s --silent)--preview[View the manifest without downloading]' \
'-h[Print help]' \
'--help[Print help]' \
'-V[Print version]' \
'--version[Print version]' \
':manifest -- The manifest (.toml) of applications:_files' \
&& ret=0
}

(( $+functions[_iwant_commands] )) ||
_iwant_commands() {
    local commands; commands=()
    _describe -t commands 'iwant commands' commands "$@"
}

if [ "$funcstack[1]" = "_iwant" ]; then
    _iwant "$@"
else
    compdef _iwant iwant
fi
